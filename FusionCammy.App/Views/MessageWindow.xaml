<Window
    x:Class="FusionCammy.App.Views.MessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FusionCammy.App.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:FusionCammy.App.ViewModels"
    Title="MessageWindow"
    Width="400"
    Height="220"
    d:DataContext="{d:DesignInstance Type=vm:MessageViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Padding="5"
        Background="#CC2A2A2A"
        CornerRadius="20">
        <StackPanel>
            <TextBlock
                Height="40"
                HorizontalAlignment="Center"
                FontSize="30"
                Foreground="#CCFFFFFF"
                Text="😽"
                TextWrapping="Wrap" />
            <TextBlock
                Height="100"
                Margin="20,10,20,10"
                FontSize="16"
                Foreground="#CCFFFFFF"
                Text="{Binding Message}"
                TextWrapping="Wrap" />
            <Button
                Width="80"
                HorizontalAlignment="Center"
                Command="{Binding CloseWindowCommand}"
                Content="확인"
                Style="{StaticResource Button.Fluent}" />
        </StackPanel>
    </Border>
</Window>
